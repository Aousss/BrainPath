<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main shape layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_grey" />
            <corners android:radius="16dp" />

            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />

        </shape>
    </item>
</layer-list>
