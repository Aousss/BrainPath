<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="@color/light_grey" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:left="2dp" android:top="0dp" android:right="0dp" android:bottom="3dp">
        <shape>
            <solid android:color="@color/blue" /> <!-- Main white background -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
