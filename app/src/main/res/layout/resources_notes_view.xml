<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- copy this layout if want to add the row -->
            <!-- THIS IS FOR THE IMAGE AND TEXT VIEW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@color/light_grey"/>

                    <TextView android:id="@+id/image1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="image 1"
                        android:textSize="14sp"
                        android:textColor="@color/dark_grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@color/light_grey"/>

                    <TextView android:id="@+id/image2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="image 2"
                        android:textSize="14sp"
                        android:textColor="@color/dark_grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@color/light_grey"/>

                    <TextView android:id="@+id/image3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="image 3"
                        android:textSize="14sp"
                        android:textColor="@color/dark_grey"/>

                </LinearLayout>

            </LinearLayout>

            <!-- THIS IS FOR THE VIDEO AND TEXT VIEW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <VideoView android:id="@+id/video1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:screenReaderFocusable="true"/>

                <TextView android:id="@+id/video1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="video sample text"
                    android:textStyle="normal"
                    android:textColor="@color/dark_grey"
                    android:textSize="16dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>