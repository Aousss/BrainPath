<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ProgressTrackingPanelBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Progress &amp; Tracking"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <!--  CONTENTS -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/light_white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="Registered Course"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- COURSE #1 - MATHS-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--  Course Icon  -->
                    <ImageView
                        android:id="@+id/iconMaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_maths"
                        android:layout_margin="10dp"/>

                    <!--  Course title & progress bar  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="15dp">

                        <TextView
                            android:id="@+id/courseTitleMaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mathematics"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"/>

                        <!-- Progress Bar display -->
                        <ProgressBar
                            android:id="@+id/progressBarMaths"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="5dp"
                            android:progress="65"
                            android:max="100"
                            android:indeterminate="false"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_courses"/>

                        <TextView
                            android:id="@+id/percentageMaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65%"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/blue"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- COURSE #2 - SCIENCE-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--  Course Icon  -->
                    <ImageView
                        android:id="@+id/iconScience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_science"
                        android:layout_margin="10dp"/>

                    <!--  Course title & progress bar  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="15dp">

                        <TextView
                            android:id="@+id/courseTitleScience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Science"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"/>

                        <!-- Progress Bar display -->
                        <ProgressBar
                            android:id="@+id/progressBarScience"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="5dp"
                            android:progress="45"
                            android:max="100"
                            android:indeterminate="false"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_courses"/>

                        <TextView
                            android:id="@+id/percentageScience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/blue"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- COURSE #3 - ENGLISH -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--  Course Icon  -->
                    <ImageView
                        android:id="@+id/iconEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_english"
                        android:layout_margin="10dp"/>

                    <!--  Course title & progress bar  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="15dp">

                        <TextView
                            android:id="@+id/courseTitleEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"/>

                        <!-- Progress Bar display -->
                        <ProgressBar
                            android:id="@+id/progressBarEnglish"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginBottom="5dp"
                            android:progress="35"
                            android:max="100"
                            android:indeterminate="false"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progress_bar_courses"/>

                        <TextView
                            android:id="@+id/percentageEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35%"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/blue"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>