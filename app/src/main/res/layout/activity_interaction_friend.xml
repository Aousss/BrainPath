<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.interaction.FriendListFragment"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="60dp">

    <!-- CHAT CARDVIEW-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:gravity="bottom">

            <!-- INPUT TEXT MESSAGE -->
            <EditText
                android:id="@+id/search_friend"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:hint="Search"
                android:background="@drawable/chat_textbox" />

            <!-- SEARCH BUTTON -->
            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_search"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:contentDescription="Search Friend" />

            <!-- ADD FRIEND BUTTON -->
            <ImageButton
                android:id="@+id/addInteractionButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_add_circle"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:contentDescription="Add Friend" />
        </LinearLayout>

        <!-- RecyclerView for the Friend List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friend_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginTop="70dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/search_bar"/>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/gotoForum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="goto Forum"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_forum"
            app:maxImageSize="40dp"/>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>