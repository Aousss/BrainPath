<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ProgressTrackingPanelBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Progress &amp; Tracking"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints,TextContrastCheck" />

        <!-- Content layout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/light_white"
            app:cardCornerRadius="20dp">

            <!-- Course Title Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Course Icon -->
                <ImageView
                    android:id="@+id/courseIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_maths"
                    android:layout_margin="10dp" />

                <!-- Course Title & Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="15dp">

                    <TextView
                        android:id="@+id/courseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mathematics"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue" />

                    <!-- Progress Bar display -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginBottom="5dp"
                        android:progress="70"
                        android:max="100"
                        android:indeterminate="false"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_courses" />

                    <TextView
                        android:id="@+id/prgressPercentageDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/blue"
                        android:layout_gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Performance and Improvement topics container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp">

                <!-- Quiz Performance -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Performance in Quiz"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- Progress bar for quiz performance -->
                <ProgressBar
                    android:id="@+id/percentageCorrectWrongBar"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:progress="65"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_performance_quiz" />

                <!-- Correct and Wrong answers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/percentageCorrect"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/percentage_correct" />

                    <TextView
                        android:id="@+id/percentageCorrectText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:id="@+id/percentageWrong"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/percentage_wrong" />

                    <TextView
                        android:id="@+id/percentageWrongText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35%"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Topics for improvement container -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topic for improvement"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- Container for improvement topics -->
                <LinearLayout
                    android:id="@+id/improvementTopicsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <!-- Placeholder for dynamically added improvement topics -->
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
